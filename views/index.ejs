                                  <input type="hidden" name="_id" value="<%=parentChapter._id%>" autocomplete="off">
                                  <button class="control_button">Update</button>
                              </form>
                              <p class="chapter_delete_<%=parentChapter._id%>">Delete Chapter</p>
                            </div>
                        <%}else{%>
